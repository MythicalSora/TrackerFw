{
    "manifest_version": 2,
    "name": "TrackerFw",
    "version": "0.6",

    "description": "TrackerFw - firewall for trackers",

    "icons": {
        "48": "icons/TrackerFW-48.svg"
    },

    "browser_action": {
        "default_icon": {
            "19": "icons/TrackerFW-19.svg",
            "38": "icons/TrackerFW-38.svg"
        },

        "browser_style": true,
        "default_title": "TrackerFw",
        "default_popup": "popup/main.html"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "webRequest",
        "notifications",
        "webNavigation",
        "webRequestBlocking"
    ],

    "background": {
        "scripts": ["proxy.js"]
    }
}
