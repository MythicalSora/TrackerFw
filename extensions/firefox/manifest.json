{
    "manifest_version": 2,
    "name": "TrackerFW",
    "version": "0.2",

    "description": "TrackerFW - firewall for trackers",

    "icons": {
        "48": "icons/border-48.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "icons/border-48.png",
            "38": "icons/border-48.png"
        },

        "default_title": "TrackerFW"
    },

    "permissions": [
        "tabs",
        "<all_urls>",
        "webRequest",
        "notifications",
        "webNavigation",
        "webRequestBlocking"
    ],

    "background": {
        "scripts": ["axios.min.js", "proxy.js"]
    }
}